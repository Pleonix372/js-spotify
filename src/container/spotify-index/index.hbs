<main class="main">
  {{#with data}}
  <div class="main__content">
    <div class="header">
      <h1 class="title title--center">Моя бібліотека</h1>
      <div class="header__buttons">
        <a href="/spotify-search">
          <img src="/svg/search.svg">
        </a>
        <a href="/spotify-choose">
          <img src="/svg/add.svg">
        </a>
      </div>
    </div>

    <ul class="playlist__list">
      {{#each list}}
      <li class="playlist">
        <img src="{{image}}" alt="{{name}}" class="playlist__img">
        <div class="playlist__content">
          <strong class="playlist__name">{{name}}</strong>
          <span class="playlist__amount">{{amount}} пісень</span>
        </div>
      </li>
      {{/each}}
    </ul>

  </div>
  {{/with}}
</main>

